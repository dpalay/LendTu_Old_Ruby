<h1>Sign up as a new user</h1>
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path, :html => {:enctype => "multipart/form-data"} do |f| -%>

<%= user_form_row f, 'login' %>
<%= user_form_row f, 'email' %>
<%= user_form_row f, 'password' %>

<p><%= label_tag 'password_confirmation', 'Confirm Password: ' %> <%= f.password_field :password_confirmation %></p>

<p><%# file_field "avatar", "image" %>

<p><%= submit_tag 'Sign up' %></p>
<% end -%>
