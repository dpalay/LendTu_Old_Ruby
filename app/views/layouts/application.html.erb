<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
  	<meta name="author" content="David Palay" />
  	<meta name="description" content="Lendtu, the webpage for sharing with friends."/>
  	<meta name="keywords" content="lendtu, lendto, lend, borrow, share, library, personal library"/>
  		
 
		<title>LendTu - <%=@title%></title>
		
		<!-- **** layout stylesheet **** -->
  	<%= stylesheet_link_tag 'style'%>
  	<!-- **** color scheme stylesheet **** -->
  	<%# stylesheet_link_tag 'colour'%>
  	<!-- Java scripts -->
  	<%= javascript_include_tag :all%>
  	<%= yield(:head) %>
	</head>
	<body>
		<div id="user_bar">
		<%= render(:partial => "users/user_bar")%>
		</div>
		<div id="logo">
			<p>PUT A LOGO HERE!</p>
		</div>
		<div id="menu_container">
			<div id="menu_nav">
				<ul>
					<%# TODO: Make a partial for the menu items  %>
					<li>
						<%= menu_link("Home", :spec, :home) %>
					</li>
					<li>
						<%= menu_link("Friends", :friendships, :list) %>
					</li>
					<li>
						<%= menu_link("Library", :items, :index) %>
					</li>
					<li>
						<%= menu_link("Settings", :spec, :settings) %>
					</li>
					<li>
						<%= menu_link("Item Search", :asearch, :search)%>
					</li>
				</ul>
			</div>
		</div>
		<div id="main_content">
			
			<%= yield  %>	
		</div>
		
		
		<% if (ENV["RAILS_ENV"] == "development")-%>
		<div id="debug">
			<a href="#" onclick="Element.toggle('params_debug_info');return false;">
				params
			</a> |
			<a href="#" onclick="Element.toggle('session_debug_info');return false;"> 
				session
			</a> | 
			<a href="#" onclick="Element.toggle('env_debug_info');return false;"> 
				env
			</a> | 
			<a href="#" onclick="Element.toggle('request_debug_info');return false;"> 
				request
			</a> | 
			<fieldset id="params_debug_info" class="debug_info">
				<legend>params</legend>
	    		<%= debug(params) %>
			</fieldset>
			<fieldset id="session_debug_info" class="debug_info">
				<legend>session</legend>
	    		<%= debug(session) %>
			</fieldset>
			<fieldset id="env_debug_info" class="debug_info">
				<legend>env</legend>
	    		<%= debug(request.env) %>
			</fieldset>
			<fieldset id="request_debug_info" class="debug_info">
				<legend>request</legend>
	    		<%= debug(request) %>
			</fieldset>
	  	</div>
		<% end -%>
	</body>
</html>
